# Dockerfile.streamlit
FROM python:3.10-slim

# Workdir inside the container
WORKDIR /app

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# System deps (optional but safe)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# ------------------------------
# Python dependencies
# ------------------------------
# includes: streamlit, requests, pandas, numpy, scikit-learn, wandb, etc.
COPY requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r /app/requirements.txt

# Copy package + scripts + app
COPY ift6758 /app/ift6758
RUN pip install -e /app/ift6758 || true

COPY scripts /app/scripts
COPY streamlit_app.py /app/streamlit_app.py
COPY bonus.py /app/bonus.py
COPY serving /app/serving
COPY figures/nhl_rink-no_background.png /app/figures/nhl_rink-no_background.png

# ------------------------------
# Streamlit server
# ------------------------------
EXPOSE 8501

WORKDIR /app

CMD ["streamlit", "run", "streamlit_app.py", "--server.port=8501", "--server.address=0.0.0.0"]
